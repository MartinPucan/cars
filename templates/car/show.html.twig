{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ car.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ car.price }}</td>
            </tr>
            <tr>
                <th>Kilometer</th>
                <td>{{ car.kilometer }}</td>
            </tr>
            <tr>
                <th>Registration</th>
                <td>{{ car.registration }}</td>
            </tr>
            <tr>
                <th>FuelType</th>
                <td>{{ car.fuelType }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('car_default') }}">back to list</a>

    <a href="{{ path('car_edit', {'id': car.id}) }}">edit</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
