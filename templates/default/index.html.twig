{% extends 'base.html.twig' %}

{% block title %}Cars{% endblock %}

{% block body %}

<div class="container p-1">
    <div>
        <h1 class="text-center">Cars</h1>
    </div>
    <div class="d-flex">
        <div class="mr-2 p-2">
            <div class="card bg-light">
                <h4 class="card-header bg-secondary text-white text-center">
                    Filter
                </h4>
                    <div class="card-group-item">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-light">
                                <h6>Brands</h6>
                            </li>
                            <li class="list-group-item">
                                <div class="text-center">
                                    <select class="custom-select">
                                        <option selected>Choose brand</option>
                                        {% for brand in brands %}
                                                <option value="{{ brand.id }}">{{ brand.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </li>
                            <li class="list-group-item bg-light">
                                <h6>Price</h6>
                            </li>

                            <li class="list-group-item">
                                <input type="range" class="form-control-range">
                            </li>
                        </ul>
                    </div>

                    <div class="card-footer text-center">
                        <button class="btn btn-outline-warning bg-secondary m-2">Search</button>
                    </div>
                </div>

            <div class="text-center m-2">
                <button class="btn btn-info">Create</button>
            </div>
        </div>

        <div class="text-center">
            <div class="row border bg-light rounded m-0 mb-2 p-2">
                <div class="col">Podle abecedy</div>
                <div class="col">Nejlevnejsi</div>
                <div class="col">Nejdrazsi</div>
            </div>
            <table class="table table-hover bg-light rounded">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Brand</th>
                        <th>Price</th>
                        <th>Kilometers</th>
                        <th>Registration</th>
                        <th>Fuel Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    {% for car in cars %}
                        <tr>
                            <th scope="row">
                                {{ car.id }}
                            </th>
                            <td><a class="fs-md td_none" href="{{ path('detail', {'id': car.id}) }}"> {{ car.name }}</a></td>
                            <td>{{ car.brand.name }}</td>
                            <td>{{ car.price }} Kc</td>
                            <td>{{ car.kilometer }} Km</td>
                            <td>{{ car.registration }}</td>
                            <td>{{ car.fuelType }}</td>
                            <td>
                                <span>
                                    <a href="#edit" class="btn bg-primary">Edit</a>
                                </span>
                                <span>
                                    <a href="#delete" class="btn bg-danger">Delete</a>
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
